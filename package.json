{
  "name": "currency-converter-api",
  "version": "1.0.0",
  "author": "Tiago Celestino <tcelestino@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest src/__tests__/**/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "validate": "npm-run-all --parallel type-check lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@fastify/swagger": "9.2.0",
    "@fastify/swagger-ui": "5.1.0",
    "axios": "1.7.7",
    "dotenv": "16.4.5",
    "fastify": "5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.15.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "eslint": "9.15.0",
    "globals": "15.12.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.3",
    "ts-jest": "29.2.5",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "typescript-eslint": "8.15.0"
  }
}
